<layout version="0.1.0">
    <checkout_onepage_index>
        <reference name="checkout.onepage">
            <action method="setTemplate">
                <template>custom/checkout/onepage.phtml</template>
            </action>
            <block type="insurance/checkout_onepage_insurance"
                   name="checkout.onepage.insurance" as="insurance"
                   template="custom/checkout/onepage/insurance.phtml">
                <block type="insurance/checkout_onepage_insurance"
                       name="checkout.onepage.insurance.info" as="insurance.info"
                       template="custom/checkout/onepage/insurance/info.phtml"/>
            </block>
        </reference>
        <reference name='checkout.progress'>
            <action method='setTemplate'>
                <template>custom/checkout/onepage/progress.phtml</template>
            </action>
            <block type="checkout/onepage_progress"
                   name="insurance.progress"
                   template="custom/checkout/onepage/progress/insurance.phtml"/>
        </reference>
    </checkout_onepage_index>

    <checkout_onepage_insurance>
        <!-- Mage_Checkout -->
        <remove name="right"/>
        <remove name="left"/>

        <block type="insurance/checkout_onepage_insurance"
               name="root" output="toHtml"
               template="custom/checkout/onepage/insurance/info.phtml"/>
    </checkout_onepage_insurance>

    <checkout_onepage_progress>
        <reference name='root'>
            <action method='setTemplate'>
                <template>custom/checkout/onepage/progress.phtml</template>
            </action>
            <block type="checkout/onepage_progress"
                   name="insurance.progress"
                   template="custom/checkout/onepage/progress/insurance.phtml"/>
        </reference>
    </checkout_onepage_progress>

    <checkout_onepage_progress_insurance>
        <!-- Mage_Checkout -->
        <remove name="right"/>
        <remove name="left"/>

        <block type="checkout/onepage_progress"
               name="root" output="toHtml"
               template="custom/checkout/onepage/progress/insurance.phtml"/>
    </checkout_onepage_progress_insurance>
</layout>